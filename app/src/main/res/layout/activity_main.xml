<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora de flujo"
            android:textSize="24sp"
            android:textColor="#212121"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Imagen relacionada con fluidos o tuberías -->
        <ImageView
            android:id="@+id/ivFlujo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Flujo de líquido"
            android:src="@drawable/ic_pipe_flow"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Diámetro inicial (Y) -->
        <EditText
            android:id="@+id/etDiametroY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Diámetro inicial (Y en cm)"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivFlujo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Velocidad inicial (VY) -->
        <EditText
            android:id="@+id/etVelocidadY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Velocidad inicial (VY en m/s)"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/etDiametroY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Diámetro final (X) -->
        <EditText
            android:id="@+id/etDiametroX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Diámetro final (X en cm)"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/etVelocidadY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Botón calcular -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calcular velocidad final (VX)"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etDiametroX"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Resultado (inicialmente invisible) -->
        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Velocidad final: 0.00 m/s"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnCalcular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
