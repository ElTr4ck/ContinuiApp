<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloSeguridad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguridad y Términos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Icono -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_security"
            android:layout_marginBottom="24dp" />

        <!-- Texto de términos -->
        <TextView
            android:id="@+id/tvTextoLegal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esta aplicación fue diseñada con fines educativos. No recopilamos datos personales ni compartimos información con terceros. El usuario es responsable del uso correcto de los cálculos proporcionados. ContinuApp no sustituye una asesoría profesional.\n\nAl utilizar esta aplicación, aceptas estos términos y condiciones."
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cbAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="He leído y acepto los términos"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Botón Aceptar -->
        <Button
            android:id="@+id/btnAceptarSeguridad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:enabled="false"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
